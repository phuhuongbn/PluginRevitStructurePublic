            TargetType="TextBox">
        <Setter Property="FontFamily" Value="Fonts/Roboto-Regular.ttf #Roboto Regular"/>
        <Setter Property="Background" Value="Transparent"/>
        
        <Setter Property="VerticalContentAlignment" Value="Center"/>
